<h1>Organizations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>State</th>
    <th>Award Total</th>
    <th>Grants</th>
    <th>Investigators</th>
    <th>Awarded Years</th>
  </tr>

<% for organization in @organizations %>
  <tr>
    <td><%= link_to organization.name, organization %></td>
    <td><%=h organization.city %></td>
    <td><%=h organization.state %></td>
    <td class="currency"><%= number_to_human_currency(organization.award_total) %></td>
    <td class="currency"><%= number_with_delimiter organization.grants_count %></td>
    <td class="currency"><%= number_with_delimiter organization.investigators_count %></td>
    <td><%= smart_year organization.years %></td>
  </tr>
<% end %>
</table>

<div class="pagination">
<%= will_paginate @organizations %>
</div>