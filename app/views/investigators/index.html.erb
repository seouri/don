<h1>Investigators<%= " at " + link_to(@organization.name, organization_path(@organization)) if @organization %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Award Total</th>
    <th>Grants</th>
    <th>Awarded Years</th>
  </tr>

<% for investigator in @investigators %>
  <tr>
    <td><%= link_to investigator.name, investigator %></td>
    <td class="currency"><%= number_to_currency investigator.award_total, :precision => 0 %></td>
    <td class="currency"><%= number_with_delimiter investigator.grants_count %></td>
    <td><%= smart_year investigator.years %></td>
  </tr>
<% end %>
</table>

<div class="pagination">
<%= will_paginate @organizations %>
</div>