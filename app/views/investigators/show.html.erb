<h1><%=h @investigator.name %></h1>

<h2>Trends</h2>
total number, total amount

<h2>All Grants</h2>

<table>
  <tr>
    <th>Year</th>
    <th>Organization</th>
    <th>Grant Number</th>
    <th>Project Title</th>
    <th>Awards</th>
  </tr>
<% for g in @investigator.grants -%>
  <tr>
    <td><%= g.year %></td>
    <td><%= link_to g.organization.name, organization_path(g.organization) %></td>
    <td><%= g.grant_number %></td>
    <td><%= g.project_title %></td>
    <td><%= number_to_currency(g.award, :precision => 0) %></td>
  </tr>
<% end -%>
  <tr>
    <td>TOTAL</td>
    <td></td>
    <td></td>
    <td></td>
    <td><%= number_to_currency(@investigator.grants.sum(:award), :precision => 0) %></td>
  </tr>
</table>

<%= link_to 'Back', investigators_path %>
